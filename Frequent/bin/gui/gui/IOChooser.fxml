<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="300.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controller.IOChooserController">
   <bottom>
      <ToolBar nodeOrientation="RIGHT_TO_LEFT" BorderPane.alignment="CENTER">
        <items>
          <Button fx:id="btnQuit" mnemonicParsing="false" text="Quit" />
            <Button fx:id="btnStart" mnemonicParsing="false" onAction="#start" text="Start" />
        </items>
      </ToolBar>
   </bottom>
   <center>
      <ListView fx:id="listIO" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <ToolBar BorderPane.alignment="CENTER">
         <items>
            <Label text="Choose Input Device" />
         </items>
      </ToolBar>
   </top>
</BorderPane>
