<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" minHeight="600.0" minWidth="800.0" prefHeight="720.0" prefWidth="1280.0" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controller.MainController">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem mnemonicParsing="false" onAction="#open" text="Open">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator></MenuItem>
                        <MenuItem fx:id="menuSave" mnemonicParsing="false" onAction="#save" text="Save" />
                        <Menu mnemonicParsing="false" text="Save ...">
                          <items>
                            <MenuItem mnemonicParsing="false" onAction="#saveCues" text="Cues" />
                              <MenuItem mnemonicParsing="false" onAction="#saveChannels" text="Channels" />
                          </items>
                        </Menu>
                        <MenuItem mnemonicParsing="false" onAction="#saveAs" text="Save As">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
                           </accelerator></MenuItem>
                        <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem fx:id="closeMenu" mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="View">
                    <items>
                        <CheckMenuItem fx:id="menuStartFFT" mnemonicParsing="false" text="Start FFT">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="SPACE" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator></CheckMenuItem>
                        <CheckMenuItem fx:id="menuShowCue" mnemonicParsing="false" text="Show CueList">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="C" control="ANY" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </CheckMenuItem>
                        <CheckMenuItem fx:id="menuShowTuner" mnemonicParsing="false" text="Show Tuner">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="T" control="ANY" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </CheckMenuItem>
                    </items>
                  </Menu>
              </menus>
            </MenuBar>
            <HBox alignment="CENTER_LEFT" spacing="5.0">
               <children>
                  <ToggleButton fx:id="toggleChannels" mnemonicParsing="false" prefWidth="65.0" selected="true" text="Channels" />
                  <ToggleButton fx:id="toggleCue" mnemonicParsing="false" prefWidth="65.0" text="Cues" />
                  <Separator orientation="VERTICAL" />
                  <Pane HBox.hgrow="ALWAYS" />
                  <Separator orientation="VERTICAL" />
                  <ToggleButton fx:id="toggleFFTView" mnemonicParsing="false" prefWidth="70.0" text="Spectrum">
                     <toggleGroup>
                        <ToggleGroup fx:id="viewGroup" />
                     </toggleGroup></ToggleButton>
                  <ToggleButton fx:id="toggleDrumView" mnemonicParsing="false" prefWidth="70.0" text="Drum" toggleGroup="$viewGroup" />
                  <ToggleButton fx:id="toggleGroupsView" mnemonicParsing="false" prefWidth="70.0" text="Groups" toggleGroup="$viewGroup" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   <bottom>
      <HBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Pane HBox.hgrow="ALWAYS" />
            <Label fx:id="lblLatency" text="[Latency]" />
            <Label fx:id="lblDriver" text="[Driver]" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
      <StackPane fx:id="stack" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <children>
            <BorderPane fx:id="sub" styleClass="transparent">
               <center>
                  <SplitPane fx:id="contentPane" onDragDropped="#dragDropped" onDragOver="#dragOver" styleClass="transparent">
                     <BorderPane.margin>
                        <Insets left="5.0" />
                     </BorderPane.margin></SplitPane>
               </center>
            </BorderPane>
         </children>
      </StackPane>
   </center>
   <left>
      <VBox>
         <children>
            <SplitPane fx:id="channelPane" dividerPositions="0.8" orientation="VERTICAL" VBox.vgrow="ALWAYS">
               <items>
                  <VBox spacing="5.0">
                     <children>
                        <HBox spacing="5.0">
                           <children>
                              <ToggleButton fx:id="toggleWaveForm" mnemonicParsing="false" prefWidth="65.0" selected="true" text="Wave" />
                              <ToggleButton fx:id="toggleGroupChannels" mnemonicParsing="false" prefWidth="65.0" text="Group" />
                           </children>
                        </HBox>
                        <TreeView fx:id="channelList" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
                  <AnchorPane fx:id="waveFormPane" SplitPane.resizableWithParent="false" />
               </items>
            </SplitPane>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </left>
</BorderPane>
