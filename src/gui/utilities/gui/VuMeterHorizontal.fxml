<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>

<HBox alignment="CENTER_LEFT" minHeight="10.0" minWidth="10.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <StackPane fx:id="vuPane" HBox.hgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Pane fx:id="vuPeakPane" prefWidth="0.0" style="-fx-background-color: linear-gradient( to right, -fx-accent, derive(-fx-accent, -50%) );" stylesheets="@../../style.css" />
               </children>
            </HBox>
            <HBox alignment="BOTTOM_CENTER">
               <children>
                  <Pane prefHeight="5.0" style="-fx-background-color: derive(-fx-accent, -50%);" />
                  <Pane fx:id="vuLastPeakPane" prefWidth="0.0" />
               </children>
            </HBox>
         </children>
      </StackPane>
      <AnchorPane fx:id="clippingPane">
         <children>
            <Label fx:id="lblPeak" alignment="CENTER" style="-fx-font-size: 12;" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0" />
         </children>
      </AnchorPane>
   </children>
</HBox>
