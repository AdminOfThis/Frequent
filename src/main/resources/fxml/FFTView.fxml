<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="dataBox" prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controller.FFTViewController">
   <center>
      <ScrollPane fx:id="canvasParent" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="ALWAYS" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <HBox alignment="CENTER_RIGHT" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <ToggleButton fx:id="tglPlay" mnemonicParsing="false" onAction="#play" prefWidth="70.0" text="Play" />
            <Button fx:id="btnExport" mnemonicParsing="false" onAction="#export" prefWidth="70.0" text="Export" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="4.0" top="5.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>
