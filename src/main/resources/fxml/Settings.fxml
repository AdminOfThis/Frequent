                                 <toggleGroup>
                                    <ToggleGroup fx:id="startUpPanel1" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton mnemonicParsing="false" text="###">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="startUpPanel2" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton mnemonicParsing="false" text="###">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="startUpPanel3" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton mnemonicParsing="false" text="###">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="startUpPanel4" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton mnemonicParsing="false" text="###">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="startUpPanel5" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton mnemonicParsing="false" text="###">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="startUpPanel6" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton mnemonicParsing="false" text="###">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="startUpPanel7" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton mnemonicParsing="false" text="###">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="startUpPanel8" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton mnemonicParsing="false" text="###">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="startUpPanel9" />
                                 </toggleGroup>
                              </RadioButton>
                           </children>
                           <padding>
                              <Insets bottom="5.0" left="25.0" right="5.0" top="5.0" />
                           </padding>
                        </FlowPane>
                     </children>
                  </VBox>
                  <Label text="Missing Signal" GridPane.columnSpan="2" GridPane.rowIndex="15" />
                  <Label text="Threshold" GridPane.columnIndex="1" GridPane.rowIndex="16" />
                  <Separator prefWidth="200.0" GridPane.columnSpan="3" GridPane.rowIndex="14" />
                  <HBox spacing="5.0" GridPane.columnIndex="2" GridPane.rowIndex="16">
                     <children>
                        <Slider fx:id="sldrThreshold" blockIncrement="3.0" max="-10.0" min="-90.0" showTickLabels="true" showTickMarks="true" value="-85.0" HBox.hgrow="SOMETIMES" />
                        <TextField fx:id="tfThreshold" editable="false" prefWidth="70.0" text="###" />
                     </children>
                  </HBox>
                  <Label text="On Reappearance" GridPane.columnIndex="1" GridPane.rowIndex="17" />
                  <FlowPane hgap="5.0" vgap="5.0" GridPane.columnIndex="2" GridPane.rowIndex="17">
                     <children>
                        <RadioButton mnemonicParsing="false" selected="true" text="Hide Notification">
                           <toggleGroup>
                              <ToggleGroup fx:id="watchDogDo" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton mnemonicParsing="false" text="Do Nothing" toggleGroup="$watchDogDo" />
                        <RadioButton mnemonicParsing="false" text="Highlight" toggleGroup="$watchDogDo" />
                     </children>
                  </FlowPane>
                  <Label text="Panel on startup" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                  <Label text="dB-Values" GridPane.columnIndex="1" GridPane.rowIndex="9" />
                  <VBox spacing="5.0" GridPane.columnIndex="2" GridPane.rowIndex="9">
                     <children>
                        <RadioButton fx:id="rBtndbCurrent" mnemonicParsing="false" selected="true" text="Current">
                           <toggleGroup>
                              <ToggleGroup fx:id="dbValues" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="rBtndbPeak" mnemonicParsing="false" text="Peak" toggleGroup="$dbValues" />
                     </children>
                  </VBox>
                  <Label text="App on startup" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  <VBox spacing="5.0" GridPane.columnIndex="2" GridPane.rowIndex="5">
                     <children>
                        <RadioButton fx:id="rdWinAsClosed" mnemonicParsing="false" selected="true" text="Start as closed">
                           <toggleGroup>
                              <ToggleGroup fx:id="window" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="rdWinFullscreen" mnemonicParsing="false" text="Fullscreen" toggleGroup="$window" />
                        <RadioButton fx:id="rdWinMaximized" mnemonicParsing="false" text="Maximized" toggleGroup="$window" />
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                           <children>
                              <RadioButton fx:id="rdWinWindowed" mnemonicParsing="false" text="Windowed" toggleGroup="$window" />
                              <TextField fx:id="txtWidth" prefWidth="70.0" promptText="Width" text="800" />
                              <Label text="x" />
                              <TextField fx:id="txtHeight" prefWidth="70.0" promptText="Heigth" text="600" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <Separator prefWidth="200.0" GridPane.columnSpan="3" GridPane.rowIndex="10" />
                  <Separator GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="6" />
                  <Separator prefWidth="200.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="8" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
